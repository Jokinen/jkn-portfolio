@require "./variables.styl"

positionSection()
  margin 0 auto
  max-width 1024px
  padding 0 20px

html
  height 100%
  width 100%
  margin 0
  padding 0
  font-size 16px;

*
  box-sizing border-box
  -moz-box-sizing border-box
  margin 0
  padding 0

body
  top 0
  left 0
  position relative
  width 100%
  height 100%
  margin 0
  padding 0
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  background #fcfcfc

footer
  padding 0 0 46px
  text-align center

h1, h2, h3, h4
  margin-bottom 0.4em

p
  margin-bottom 1.2em
  line-height 1.6

a
  border-bottom 2px solid #fbc173
  transition border-bottom 0.1s ease-out

  color #fff
  font-weight 500
  text-decoration none

a:hover
  border-bottom-color transparent

ul
  list-style-position inside

section
  padding 0 20px

.row
  display flex
  flex-direction column
  gap 30px
  margin-bottom 30px

  @media screen and (min-width: 800px)
    flex-direction row
    flex-basis 50%

.description
  font-weight 300
  font-size 1.16rem
  text-align center
  color $textColor

.wrap
  width 100%

.intro
  padding 30px 0 100px
  positionSectionOne()

  @media screen and (min-width: 425px)
    padding 24px 0 54px

.intro-wrap
  positionSection()
  height 140px
  position relative

.ingress
  color #fff
  position relative
  top 50%
  transform translateY(-50%)

  @media screen and (min-width: 600px)
    width 60%

.ingress
  font-size 1.24em
  font-weight 300

.header-background
  position absolute
  top 0
  left 0
  height 220px
  width 100%
  background linear-gradient(26deg, #d689ce 14%, #f17c8f 70%, #fbc173 91%)
  transform-origin 0
  transform skewY(-4deg)

  @media screen and (min-width: 425px)
    height 240px

.welcome
  text-align center

.hello
  text-align center
  font-weight 800
  font-size 5rem
  letter-spacing -8px
  margin 0 0 1rem

  @media screen and (min-width: 800px)
    font-size 12.5rem
    letter-spacing -20px

.looking-and-skills
  positionSection()
  margin-top 50px

  @media screen and (min-width: 425px)
    margin-top 72px

.card
  display inline-block
  width 100%
  margin 0 auto
  padding 20px 24px
  background #fff
  border-radius 6px
  box-shadow 0 10px 35px rgba(50,50,93,.1),0 5px 15px rgba(0,0,0,.07)
  text-align left
  transition all ease-in .1s

  @media screen and (min-width: 425px)
    padding 30px 40px

.card:hover
  transform scale(1.01)
  box-shadow 0 10px 45px rgba(50,50,93,.16),0 5px 25px rgba(0,0,0,.12)

.card__title
  margin 0 0 0.6em
  font-weight 600
  font-size 1.17em
  letter-spacing -0.01em

.card__list li
  padding-left 20px
  position relative
  list-style-type none
  line-height 1.8
  color $textColor
  font-size 1.1em
  font-weight 300

.card__list li:before
  content "+"
  position absolute
  left 0
  font-weight 600
  color: inherit

.card__list.blue li:before
  color $blue

.card__list.green li:before
  color $green

.contact
  text-align center
  margin 100px 0

.button-link
  display inline-block
  padding 8px 20px
  background $green
  border-radius 20px
  border-bottom none

.button-link.bigger
  padding 12px 28px
  border-radius 80px

  letter-spacing 1px
  font-size 1.3rem

.blue
  color $blue

.blue-light
  color $blue-light

.green
  color $green

.green-light
  color $green-light

.screen-reader-only
  position absolute
  width 1px
  clip rect(0 0 0 0)
  overflow hidden
  white-space nowrap
